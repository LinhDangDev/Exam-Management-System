@page "/exam"
@implements IDisposable
@attribute [Authorize]
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- reset css -->
    <!-- embed fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Sen:wght@700&display=swap"
          rel="stylesheet" />

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
          integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
          crossorigin="anonymous" />

    <!-- styles -->
    <link href="./css/exam/style.css" rel="stylesheet"/>
    <!--Latex hỗ trợ công thức phép toán-->
    <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
    <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>
    <title>Document</title>
</head>

<body>
    <header class="header fiexd">
        <div class="main-content">
            <div class="body">
                <!-- logo -->
                <img src="images/exam/Logo.svg" alt="" class="logo" />
                <!-- nav -->
                <div class="time">
                    <img src="images/exam/clock-stand-svgrepo-com 1.svg"
                         alt=""
                         class="logo_time" />
                    <h3>Thời Gian : @displayTime </h3>
                </div>
                <nav class="nav">
                    <button @onclick="onClickNopBai" class="btn btn-nop-bai">
                        Nộp Bài
                    </button>
                </nav>
            </div>
        </div>
    </header>
    <!-- main -->
    <main>
        <!-- question -->
        <div class="layout">
            <div class="main-content">
                <div class="body">
                    <!-- layout left -->

                    <div class="layout-left">
                        @{
                            int QuestionMask = 1; // hiện thứ tự câu hỏi
                            int thu_tu_ma_nhom = -1;
                            int thu_tu_ma_cau_hoi = -1;
                        }
                        @if(chiTietDeThiHoanVis != null)
                        {
                            @foreach (var item in chiTietDeThiHoanVis)
                            {
                                // Hiển thị nội dung câu hỏi nhóm
                                if (item.MaNhom != thu_tu_ma_nhom)
                                {
                                    thu_tu_ma_nhom = item.MaNhom;
                                    string? noiDungCauHoiNhom = nhomCauHois?.FirstOrDefault(p => p.MaNhom == item.MaNhom)?.NoiDung;
                                    <section id="question@(QuestionMask )" class="txt">
                                        @if (noiDungCauHoiNhom != null)
                                        {
                                            <p>@((MarkupString)noiDungCauHoiNhom)</p>
                                        }
                                    </section>
                                }

                                // Hiển thị nội dung câu hỏi
                                <div id="question@(QuestionMask + 1)" class="form_question">
                                    @if (item.MaCauHoi != thu_tu_ma_cau_hoi)
                                    {
                                        thu_tu_ma_cau_hoi = item.MaCauHoi;
                                        string? noiDungCauHoi = cauHois?.FirstOrDefault(p => p.MaCauHoi == thu_tu_ma_cau_hoi)?.NoiDung;
                                        <div class="txt_question">
                                            @if (noiDungCauHoi != null)
                                            {
                                                <p><b>Câu hỏi @QuestionMask: </b> @((MarkupString)noiDungCauHoi)</p>
                                            }
                                        </div>
                                    }

                                    <!--Hiển thị câu trả lời-->
                                    <div class="form-input">
                                        @{
                                            var cauTraLois = cauHois?.FirstOrDefault(p => p.MaCauHoi == item.MaCauHoi)?.TblCauTraLois;
                                            int? length = item.HoanViTraLoi?.Length;
                                            int STT_hien_thi = 0; // thứ tự câu trả lời thực tế hiện ra màn hình
                                            for (int i = 0; i < length; i++)
                                            {
                                                STT_hien_thi++;
                                                int? vi_tri_cau_tra_loi = item?.HoanViTraLoi?[i] - '0'; // đọc từng phần tử HoanViTL, chuyển đổi mã ACII từ chữ thành số
                                                string? noiDungCauTraLoi = cauTraLois?.FirstOrDefault(p => p.ThuTu == vi_tri_cau_tra_loi)?.NoiDung;
                                                int? ma_cau_tra_loi = cauTraLois?.FirstOrDefault(p => p.ThuTu == vi_tri_cau_tra_loi)?.MaCauTraLoi;
                                                if (noiDungCauTraLoi != null && item != null && alphabet != null)
                                                {
                                                    //Xử lí việc sinh đã khoanh câu này và bị out
                                                    if (cau_da_chons!= null && cau_da_chons.Contains($"btn Nhom:{item.MaNhom} CauHoi:{item.MaCauHoi} ThuTu:{STT_hien_thi}"))
                                                    {
                                                        <button class="btn1 answer already-choose" onclick="changeButtonColor(this, @QuestionMask, @ma_cau_tra_loi, @item.MaNhom, @item.MaCauHoi)">@alphabet[i] . @((MarkupString)noiDungCauTraLoi)</button>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn1 answer" onshow="" onclick="changeButtonColor(this, @QuestionMask, @ma_cau_tra_loi, @item.MaNhom, @item.MaCauHoi)">@alphabet[i] . @((MarkupString)noiDungCauTraLoi)</button>
                                                    }
                                                }
                                            }
                                        }
                                    </div>
                                </div>
                                QuestionMask++;
                            }
                        }
                    </div>
                    <!-- layout right -->
                    <div class="layout-right">
                        <div class="information">
                            <div class="avata">
                                <img src="images/exam/Ellipse 1.svg" alt="" />
                            </div>

                            <div class="information-student">
                                @if(sinhVien != null && caThi != null && chiTietCaThi != null)
                                {
                                    <p>MSSV: @sinhVien.MaSoSinhVien</p>
                                    <p>Họ và tên:  @sinhVien.HoVaTenLot @sinhVien.TenSinhVien</p>
                                    <p>Ca Thi: @caThi.TenCaThi</p>
                                    <p>Mã đề: @chiTietCaThi.MaDeThi</p>
                                }
                            </div>

                        </div>
                        <div class="choose_content">
                            <div class="choose-question">
                                <div class="choose">
                                    @if (chiTietDeThiHoanVis != null)
                                    {
                                        int tongSoCau = chiTietDeThiHoanVis.Count;
                                        for (int i = 1; i <= tongSoCau; i++)
                                        {
                                            if(cau_da_chons != null)
                                            {
                                                if(cau_da_chons.Contains($"SoCauHoi: {i}"))
                                                {
                                                    <a class="alink-already" href="javascript:void(0);" onclick="scrollToQuestion(@i )">@i</a>
                                                }
                                                else
                                                {
                                                    <a href="javascript:void(0);" onclick="scrollToQuestion(@i )">@i</a>
                                                }
                                            }
                                        }
                                    }
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- Trong file exam.cshtml -->
</body>
<!-- Script for the toast function and other functionalities -->
<script src="./js/main.js" type="text/javascript"></script>
<script src="./js/exam.js" type="text/javascript"></script>
</html>